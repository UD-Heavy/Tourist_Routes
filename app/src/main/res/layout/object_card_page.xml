<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pages.ObjectCardPage">

    <!-- Фоновое изображение для ViewPager -->
    <ImageView
        android:id="@+id/viewPagerBackground"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/dk" />

    <!-- Верхняя часть с изображениями -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="482dp"
        android:layout_alignParentTop="true" />

    <!-- Нижняя подвижная панель -->
    <FrameLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="486dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-40dp"
        android:background="@drawable/pull_out_menu"
        app:behavior_hideable="true"
        app:behavior_peekHeight="30dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Кнопка избранного -->
        <ImageView
            android:id="@+id/favorite_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|top"
            android:layout_margin="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Favorite"
            android:src="@drawable/ic_favorite"
            android:clickable="true"
            android:focusable="true"
            android:importantForAccessibility="yes"
            android:enabled="true"
            android:focusableInTouchMode="true" />

        <!-- Остальные элементы внутри bottom_sheet -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/name_view"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/adress_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="80dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categ_view"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="108dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/grades_view"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="142dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/working_hours_view"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="165dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/images_view"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="320dp"
            android:clipToPadding="true"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:scrollbars="horizontal" />

        <ImageButton
            android:id="@+id/circle1"
            android:layout_width="383dp"
            android:layout_height="80dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/contacts"
            android:contentDescription="@string/block"
            android:padding="0dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/contacts_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Контакты"
            android:fontFamily="@font/inter_medium"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="225dp" />
        <TextView
            android:id="@+id/phone_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номер телефона"
            android:textSize="15sp"
            android:fontFamily="@font/inter_medium"
            android:textColor="#0645AD"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="250dp"
            android:clickable="true"
            android:focusable="true" />
    </FrameLayout>

</RelativeLayout>
