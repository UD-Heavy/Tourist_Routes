<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/inter_extrabold"
        android:text="Новости и события"
        android:textColor="#333333"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="18dp"
        app:backgroundTint="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button_all"
        android:layout_width="80dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="18dp"
        android:text="Все"
        android:textColor="#333333"
        app:backgroundTint="#C0BEBE"
        app:layout_constraintEnd_toStartOf="@+id/button_events"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <Button
        android:id="@+id/button_events"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="События"
        android:textColor="#333333"
        app:backgroundTint="#C0BEBE"
        app:layout_constraintEnd_toStartOf="@+id/button_news"
        app:layout_constraintStart_toEndOf="@+id/button_all"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <Button
        android:id="@+id/button_news"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp"
        android:text="Новости"
        android:textColor="#333333"
        app:backgroundTint="#C0BEBE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_events"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/news_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="" />

</androidx.constraintlayout.widget.ConstraintLayout>