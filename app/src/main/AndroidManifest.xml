<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Разрешения, необходимые для работы приложения -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Разрешение для проверки состояния сети -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Test"
        tools:targetApi="31">

        <!-- Активность главного меню приложения -->
        <activity
            android:name=".pages.MainMenuPage"
            android:exported="true" >
            <intent-filter>
                <!-- Указывает, что эта активность является основным окном приложения -->
                <action android:name="android.intent.action.MainWindow" />
                <!-- Задает, что эта активность будет отображаться на главном экране -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Активность экрана входа в приложение -->
        <activity
            android:name=".pages.LoginPage"
            android:exported="true">
            <intent-filter>
                <!-- Указывает, что эта активность запускается как основное окно приложения -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Активность экрана регистрации -->
        <activity
            android:name=".pages.RegistrationPage"
            android:exported="true">
            <intent-filter>
                <!-- Указывает уникальное действие для запуска этой активности -->
                <action android:name="com.example.test.SecondActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Метаданные для предзагрузки шрифтов, указанных в ресурсах -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>